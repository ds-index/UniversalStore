@model List<Product>

<div class="container">
	<div class="card">
		<div class="card-header">
			<div class="row flex-row justify-content-around">
				<div class="col-12 text-start">
					<a class="btn btn-primary rounded-2" asp-controller="Product" asp-action="Create">Create Product</a>
				</div>
			</div>
		</div>
		<div class="card-body">
			<table class="table table-responsive table-bordered table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Product Name</th>
						<th>Description</th>
						<th>Price</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Name</td>
							<td>@item.Description</td>
							<td>@item.Price</td>
							<td>
								<a class="btn btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit <i class="bi bi-pencil-square"></i></a>
							</td>
							<td>
							<td>
								<a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete <i class="bi bi-trash3"></i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>